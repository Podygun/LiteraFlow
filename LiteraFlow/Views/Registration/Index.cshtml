@model RegistrationViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="d-flex flex-wrap justify-content-center">
    <form method="post" class="reg_form">

        <div class="mb-3">
            <label class="form__label me-auto">Почта</label>
            <input class="form__input" name="Email" type="text" value="@Model.Email" />
            <div class="form__error_label">@Html.ValidationMessageFor(m => m.Email)</div>
        </div>
        <div class="mb-3">
            <label class="form__label">Пароль</label>
            <input class="form__input" name="Password" type="password" />
            <div class="form__error_label">@Html.ValidationMessageFor(m => m.Password)</div>
        </div>
        <div class="mb-3">
            <label class="form__label">Повтор пароля</label>
            <input class="form__input" name="ConfirmPassword" type="password" />
            <div class="form__error_label ">
                @Html.ValidationMessageFor(m => m.ConfirmPassword)</div>
        </div>
        <div class="d-flex justify-content-end">
            <button class="btn_dark">Зарегистрироваться</button>
        </div>
    </form>
</div>
